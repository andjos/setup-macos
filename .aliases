#!/bin/bash

# Get week number
alias week='date +%V'

# IP addresses
alias wanip="dig +short myip.opendns.com @resolver1.opendns.com"
alias lanip="ipconfig getifaddr en0"
alias ips="ifconfig -a | grep -o 'inet6\? \(addr:\)\?\s\?\(\(\([0-9]\+\.\)\{3\}[0-9]\+\)\|[a-fA-F0-9:]\+\)' | awk '{ sub(/inet6? (addr:)? ?/, \"\"); print }'"

alias wanhost="dig +short -x $(dig +short myip.opendns.com @resolver1.opendns.com)"
alias waninfo="wanip && wanhost"

# Lock the screen (when going AFK)
alias afk="/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend"

#Flush dns
alias flushdns="sudo killall -HUP mDNSResponder"

#Docker lint
alias dockerlint='docker run -v "$PWD/Dockerfile":/Dockerfile:ro replicated/dockerfilelint /Dockerfile'
